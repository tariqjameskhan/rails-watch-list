<div class="navbar-lewagon">
  <h1 class="ms-3 p-2">My Movie Lists</h1>
</div>
<div class="container d-flex justify-content-evenly">
  <% @lists.each do |list| %>
    <div class="card" style="width: 18rem;">
      <img src="..." class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= list.name %></h5>
        <p class="card-text"></p>
      </div>

      <ul class="list-group list-group-flush">
      <% list.bookmarks.each do |bookmark| %>
        <li class="list-group-item">Movie Title: <%= bookmark.movie.title %></li>
        <li class="list-group-item">Movie Overview: <%= bookmark.movie.overview %></li>
      <% end %>
      </ul>
      <div class="card-body">
        <%= link_to "See List", list_path(list), class: "btn btn-dark text-light mt-3 p-2 ms-1" %>
      </div>
    </div>
  <% end %>
</div>
<div class="container d-flex justify-content-end mb-5">
  <%= link_to "Add a new list", new_list_path, class: "btn btn-dark text-light mt-3 p-2 ms-1" %>
</div>
