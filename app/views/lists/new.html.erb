<h1>Lists#new</h1>
<p>Find me in app/views/lists/new.html.erb</p>

<div class="container">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-10 col-sm-6">
        <h1 class="border-bottom p-3">Add the name of<strong> your</strong> list</h1>
        <%= simple_form_for(@list) do |f| %>
        <%= f.input :name %>
        <%= f.submit %>
         <% end %>
        <div>
          <p><%= link_to "Back to all lists", lists_path, class: "btn btn-dark mt-5 text-white"%></p>
        </div>
      </div>
    </div >
  </div>
</div>
